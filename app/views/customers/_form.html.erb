<%= form_for @customer do |f| %>

  <% if @customer.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@customer.errors.count, "error") %> kept this customer from being saved:
      </h2>
      <ul>
        <% @customer.errors.full_messages.each do |error| %>
          <li><%= error %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :contact_info %>
    <%= f.text_field :contact_info %>
  </p>

  <p>
    <%= f.submit %>
  </p>

<% end %>
