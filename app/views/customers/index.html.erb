<%= link_to "Add New Customer", new_customer_path %>
<table>
    <tr>
      <td><h3>Company Name</h3></td>
      <td><h3>Address</h3></td>
    </tr>
  <% @customers.each do |customer| %>
    <tr>
      <td><p><%= link_to "#{customer.name}", customer_path(customer) %></p></td>
      <td><p><%= customer.contact_info %></p></td>
      <td><p><%= link_to 'Edit', edit_customer_path(customer) %></p></td>
      <td><p><%= link_to 'Delete', customer_path(customer),
                                    method: :delete,
                                    data: {confirm: "confirm delete of #{customer.name}"} %></p></td>
    </tr>
  <% end %>
</table>
